@page
@using IdentityProvider
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.Extensions.Localization
@model LoginModel
@inject IStringLocalizer<I18NResource> localizer

@{
  ViewData["Title"] = localizer["Login"];
}

<div style="display: flex; justify-content: center" class="mt-3">
  <div style="width: 50%">
    <section>
      <form id="account" method="post">
        <h2>@ViewData["Title"]</h2>
        <hr/>
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="mb-3">
          <calcite-label>
            @localizer["EmailControlName"].Value
            <calcite-input name="Input.Email" scale="l" autocomplete="username" placeholder="name@example.com"></calcite-input>
          </calcite-label>
          <span asp-validation-for="Input!.Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
          <calcite-label>
            @localizer["PasswordControlName"]
            <calcite-input name="Input.Password" scale="l" autocomplete="current-password" placeholder="password" type="password"></calcite-input>
          </calcite-label>
          <span asp-validation-for="Input!.Password" class="text-danger"></span>
        </div>
        <div class="checkbox mb-3">
          <calcite-label layout="inline">
            <calcite-checkbox name="Input.RememberMe" scale="l"></calcite-checkbox>
            @localizer["RememberMeControllerName"]
          </calcite-label>
        </div>
        <div>
          <calcite-button kind="brand" scale="l" type="submit" width="full">@localizer["Login"]</calcite-button>
        </div>
        <div>
          <p>
            <a id="forgot-password" asp-page="./ForgotPassword">@localizer["ForgotPassword"]</a>
          </p>
        </div>
      </form>
    </section>
  </div>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial"/>
}