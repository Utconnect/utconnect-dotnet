@using Microsoft.Extensions.Localization
@using Shared.Application.Localization
@inject IStringLocalizer<I18NResource> Localizer

<calcite-shell-panel slot="panel-start">
  <calcite-panel>
    <calcite-menu layout="vertical">
      @foreach (ManageNavPages.ManageNavPageItem item in ManageNavPages.Items)
      {
        <calcite-menu-item icon-start="@item.Icon" text="@Localizer[item.Name]" active="@ManageNavPages.IsActivePageNav(ViewContext, item.Url)"
                           href="@Url.Page($"/Account/Manage/{item.Url}", new { Area = "Identity" })">
        </calcite-menu-item>
      }
    </calcite-menu>
  </calcite-panel>
</calcite-shell-panel>