@using IdentityProvider.Domain.Models
@using Microsoft.AspNetCore.Identity
@using Microsoft.Extensions.Localization
@using Shared.Application.Localization
@inject UserManager<User> UserManager
@inject IStringLocalizer<I18NResource> Localizer

<calcite-menu slot="content-end">
  @if (User.Identity is { IsAuthenticated: true })
  {
    <calcite-menu-item text="@Localizer["Hello"] @UserManager.GetUserName(User)">
      <calcite-menu-item slot="submenu-item" text="@Localizer["ManageAccount"]" href="/auth/manage"></calcite-menu-item>
      <calcite-menu-item slot="submenu-item" text="@Localizer["Logout"]" href="/auth/logout"></calcite-menu-item>
    </calcite-menu-item>
  }
  else
  {
    <calcite-menu-item text="@Localizer["Login"]" href="/auth/login"></calcite-menu-item>
  }
</calcite-menu>